newrelic:
  #
  # Update with your New Relic account license key:
  #
  license_key: "<%= ENV.fetch('NEW_RELIC_LICENSE_KEY') %>"
  #
  # Set to '1' for verbose output, remove for normal output.
  # All output goes to stdout/stderr.
  #
  verbose: 1

#
# Agent Configuration, describe your nginx instances here
#
agents:
  elasticsearch_stats_agent:
    -
      # Application name
      name: "<%= ENV.fetch('ELASTICSEARCH_APPLICATION_NAME') %>"
      # Index name
      # using "_all" with provide stats for all indices
      index: "<%= ENV.fetch('ELASTICSEARCH_INDEX') %>"
      url: "<%= ENV.fetch('ELASTICSEARCH_URL') %>"
